<form method="post" action="{{ path('app_student_delete', {'id': student.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet étudiant ?');" class="d-inline">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ student.id) }}">
    <button class="btn btn-danger w-100">
        <i class="fas fa-trash-alt me-1"></i> Supprimer
    </button>
</form>
