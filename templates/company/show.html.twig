{% extends 'base.html.twig' %}

{% block title %}Détails de l'entreprise{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center page-header">
        <h1>Détails de l'entreprise</h1>
        <div class="btn-group">
            <a href="{{ path('app_company_edit', {'id': company.id}) }}" class="btn btn-primary">
                <i class="fas fa-edit me-1"></i> Modifier
            </a>
            {{ include('company/_delete_form.html.twig') }}
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">Informations générales</h5>
                </div>
                <div class="card-body">
                    <table class="table table-striped">
                        <tbody>
                            <tr>
                                <th style="width: 30%">ID</th>
                                <td>{{ company.id }}</td>
                            </tr>
                            <tr>
                                <th>Nom</th>
                                <td>{{ company.name }}</td>
                            </tr>
                            <tr>
                                <th>Adresse</th>
                                <td>
                                    {{ company.street }}<br>
                                    {{ company.zipcode }} {{ company.city }}<br>
                                    {{ company.country }}
                                </td>
                            </tr>
                            <tr>
                                <th>Téléphone</th>
                                <td>{{ company.phone }}</td>
                            </tr>
                            <tr>
                                <th>Fax</th>
                                <td>{{ company.fax }}</td>
                            </tr>
                            <tr>
                                <th>Email</th>
                                <td>{{ company.email }}</td>
                            </tr>
                            <tr>
                                <th>Taille de l'entreprise</th>
                                <td>{{ company.companySize }}</td>
                            </tr>
                            <tr>
                                <th>Secteur</th>
                                <td>{{ company.sector.name }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">Actions</h5>
                </div>
                <div class="card-body">
                    <div class="btn-group-vertical w-100">
                        <a href="{{ path('app_company_edit', {'id': company.id}) }}" class="btn btn-outline-primary mb-2">
                            <i class="fas fa-edit me-1"></i> Modifier
                        </a>
                        {{ include('company/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
