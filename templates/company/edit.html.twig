        <h1>Modifier l'entreprise</h1>
    </div>

    <div class="card">
        <div class="card-header bg-white">
            <h5 class="card-title mb-0">Formulaire d'édition</h5>
        </div>
        <div class="card-body">
            {{ include('company/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
        </div>
        <div class="card-footer bg-white d-flex justify-content-between">
            <a href="{{ path('app_company_index') }}" class="btn btn-outline-secondary">
