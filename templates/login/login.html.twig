{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/style3.css') }}">
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/script.js') }}"></script>
{% endblock %}

{% block title %}Log In{% endblock %}

{% block body %}
<div>
    <div>
        <h4>Log In</h4>
        <form method="post">
            {% if error is defined and error %}
                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div>
                    You are logged in as {{ app.user.userIdentifier }},
                    <a href="{{ path('app_logout') }}">Logout</a>
                    <br>
                    <a href="{{ path('app_default') }}">Back to Home</a>
                </div>
            {% endif %}

            <div>
                <label for="username">Email address</label>
                <input type="email" id="username" name="_username" value="{{ last_username }}" placeholder="Your Email" autocomplete="email" required autofocus>
            </div>

            <div>
                <label for="password">Password</label>
                <input type="password" id="password" name="_password" placeholder="Your Password" autocomplete="current-password" required>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <button type="submit">Log In</button>

            <div>
                <p><a href="/forgot-password">Forgot your password?</a></p>
                <p><a href="/register">Don't have an account? Click here to create one</a></p>
            </div>
        </form>
    </div>
</div>
{% endblock %}
