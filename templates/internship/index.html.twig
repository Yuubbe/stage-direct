{% extends 'base.html.twig' %}

{% block title %}Liste des stages{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Liste des stages</h1>

        <div class="mb-3">
            <a href="{{ path('app_internship_new') }}" class="btn btn-success">Créer un nouveau stage</a>
            <a href="{{ path('app_internship_export_pdf') }}" class="btn btn-primary" target="_blank">Exporter en PDF</a>
        </div>

        <table class="table table-striped">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Titre</th>
                    <th>Description</th>
                    <th>Date de début</th>
                    <th>Date de fin</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for internship in internships %}
                    <tr>
                        <td>{{ internship.id }}</td>
                        <td>{{ internship.title }}</td>
                        <td>{{ internship.description }}</td>
                        <td>{{ internship.startDate ? internship.startDate|date('d/m/Y H:i') : 'Non défini' }}</td>
                        <td>{{ internship.endDate ? internship.endDate|date('d/m/Y H:i') : 'Non défini' }}</td>
                        <td>
                            <a href="{{ path('app_internship_show', {'id': internship.id}) }}" class="btn btn-info btn-sm">Voir</a>
                            <a href="{{ path('app_internship_edit', {'id': internship.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="text-center">Aucun stage trouvé.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
