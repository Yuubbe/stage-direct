{% extends 'base.html.twig' %}

{% block title %}Nouveau rapport de stage{% endblock %}

{% block body %}
    <div class="container">
        <h1>Nouveau rapport de stage</h1>
        <h4 class="text-muted mb-4">Stage : {{ internship.title }}</h4>

        {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
            {{ form_widget(form) }}
            <div class="mt-3">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-1"></i> Enregistrer
                </button>
                <a href="{{ path('app_internship_show', {'id': internship.id}) }}" class="btn btn-secondary">
                    <i class="fas fa-times me-1"></i> Annuler
                </a>
            </div>
        {{ form_end(form) }}
    </div>

    <script src="https://cdn.tiny.cloud/1/your-api-key/tinymce/5/tinymce.min.js"></script>
    <script>
        tinymce.init({
            selector: '#report_content',
            plugins: 'lists link image table',
            toolbar: 'undo redo | styles | bold italic | alignleft aligncenter alignright | bullist numlist | link image | table',
            height: 400
        });
    </script>
{% endblock %}
